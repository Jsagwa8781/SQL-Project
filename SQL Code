--Deleting 8 rows so there is an equal amount in both tables

DELETE TOP(8) FROM CostCenter;


--Joining the two tables ACDOCA and CostCenter

SELECT DISTINCT
    CC.CompanyCode,
    CC.SumAmountTransactionCurrency,
    CC.SumAmountCompanyCodeCurrency,
    CC.SumAmountGlobalCurrency,
    A.Ledger,
    A.FiscalYear,
    A.DocumentNumber,
    A.PostingItem,
    A.ReferenceNumber,
    A.TransactionCurrency
FROM
    CostCenter CC
JOIN
    ACDOCA A ON CC.CompanyCode = A.CompanyCode;
--Filtered Transaction Amounts by Fiscal Year and Transaction Currency (2022)
SELECT DISTINCT
    CC.CompanyCode,
    CC.SumAmountTransactionCurrency,
    A.FiscalYear,
    A.TransactionCurrency
FROM
    [ADOCA SQL Project].[dbo].[CostCenter] CC
JOIN
    [ADOCA SQL Project].[dbo].[ACDOCA] A ON CC.CompanyCode = A.CompanyCode
WHERE
    (A.TransactionCurrency = 'EUR' OR A.TransactionCurrency = 'GBP' OR A.TransactionCurrency = 'USD') AND
    A.FiscalYear = '2022';

--Filtered Transaction Amounts by Fiscal Year and Transaction Currency (2023)
	SELECT DISTINCT
    CC.CompanyCode,
    CC.SumAmountTransactionCurrency,
    A.FiscalYear,
    A.TransactionCurrency
FROM
    [ADOCA SQL Project].[dbo].[CostCenter] CC
JOIN
    [ADOCA SQL Project].[dbo].[ACDOCA] A ON CC.CompanyCode = A.CompanyCode
WHERE
    (A.TransactionCurrency = 'EUR' OR A.TransactionCurrency = 'GBP' OR A.TransactionCurrency = 'USD') AND
    A.FiscalYear = '2023';

--Top Companies by Total Global Amount:
SELECT TOP 10
    A.CompanyCode,
    SUM(CC.SumAmountGlobalCurrency) AS TotalGlobalAmount
FROM
    ACDOCA A
JOIN
    CostCenter CC ON A.CompanyCode = CC.CompanyCode
GROUP BY
    A.CompanyCode
ORDER BY
    TotalGlobalAmount DESC;

--Transaction Amount Trend Over Fiscal Years
SELECT
    A.FiscalYear,
    A.CompanyCode,
    SUM(CC.SumAmountTransactionCurrency) AS TotalTransactionAmount
FROM
    ACDOCA A
JOIN
    CostCenter CC ON A.CompanyCode = CC.CompanyCode
GROUP BY
    A.FiscalYear,
    A.CompanyCode
ORDER BY
    A.FiscalYear, A.CompanyCode;

--Transaction Amount Ratio by Transaction Currency
SELECT
    A.TransactionCurrency,
    SUM(CC.SumAmountTransactionCurrency) AS TotalTransactionAmount,
    SUM(CC.SumAmountTransactionCurrency) / SUM(SUM(CC.SumAmountTransactionCurrency)) OVER () AS TransactionAmountRatio
FROM
    ACDOCA A
JOIN
    CostCenter CC ON A.CompanyCode = CC.CompanyCode
GROUP BY
    A.TransactionCurrency
ORDER BY
    TotalTransactionAmount DESC;

--Sum Amounts by Transaction Currency and Posting Item
SELECT
    A.FiscalYear,
    A.CompanyCode,
    A.PostingItem,
    SUM(CC.SumAmountTransactionCurrency) AS TotalTransactionAmount
FROM
    ACDOCA A
JOIN
    CostCenter CC ON A.CompanyCode = CC.CompanyCode
GROUP BY
    A.FiscalYear,
    A.CompanyCode,
    A.PostingItem
ORDER BY
    A.FiscalYear, A.CompanyCode, A.PostingItem;


 
