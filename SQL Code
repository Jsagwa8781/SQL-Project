--Creating ACDOCA Table

CREATE TABLE ACDOCA (
    Ledger NVARCHAR(50),
    CompanyCode NVARCHAR(50),
    FiscalYear INT,
    DocumentNumber NVARCHAR(50),
    PostingItem INT,
    ReferenceNumber NVARCHAR(50),
    TransactionCurrency NVARCHAR(50)
);

