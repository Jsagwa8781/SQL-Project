CREATE TABLE CostCenter (
    CompanyCode NVARCHAR(50),
    SumAmountTransactionCurrency DECIMAL(18, 2),
    SumAmountCompanyCodeCurrency DECIMAL(18, 2),
    SumAmountGlobalCurrency DECIMAL(18, 2)
);

